<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txt_company_name"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="Comapny"
        android:singleLine="true"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="10dp"
        android:background="@color/background_grey">

        <TextView
            android:id="@+id/txt_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ic_photo_green_24dp"
            android:gravity="center_horizontal"
            android:text="@string/no_image_available"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/img_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

    </FrameLayout>
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_company_loc"
            android:textSize="14sp"
            android:drawableLeft="@drawable/ic_location_city_black_18dp"
            android:text="Comapny"
            android:drawablePadding="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_alignBaseline="@+id/txt_explore_products"
            android:layout_toLeftOf="@+id/txt_explore_products"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_explore_products"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
            android:text="Explore Products"
            android:drawablePadding="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>